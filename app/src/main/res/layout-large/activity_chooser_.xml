<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Alatheer.elashry.Faihaa.Activities.Chooser_Activity"
    android:background="@drawable/back1"
    >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/toolbar"
        >

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:background="@drawable/choose"
                android:layout_gravity="center_horizontal|center_vertical"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/img_parent"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="200dp"
                        android:src="@drawable/parent" />
                    <ImageView
                        android:id="@+id/img_student"
                        android:layout_marginLeft="180dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/student2"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="260dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/img_employee"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/employee"
                        android:layout_marginLeft="180dp"
                        />
                    <ImageView
                        android:id="@+id/img_visitor"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginLeft="190dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/visit"

                        />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </ScrollView>
</LinearLayout>
