<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorPrimary"

    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linear_fees"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_ar_name"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:background="@drawable/btn4"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:text="@string/row_name"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_transfer_fees"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/btn4"
                android:layout_weight="2"
                android:gravity="center" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:text="@string/tuition_fees"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_pay"

                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@drawable/btn4"
                android:layout_height="40dp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="@color/colorAccent"
                android:text="@string/transfer_fees_1"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>

