<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back1">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/toolbar"
        ></android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/textShimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:reflectionColor="#FBB429"
            android:text="سارع بحجز مقعدك للعام الدراسي الجديد. تسجيل طالب جديد"
            android:gravity="center"
            />
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/cardView"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@drawable/home_bg"
        >

        <View
            android:layout_width="280dp"
            android:layout_height="10px"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:rotation="45"
            />
        <View
            android:layout_width="280dp"
            android:layout_height="10px"
            android:background="@color/white"
            android:layout_centerInParent="true"
            android:rotation="135"
            />
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/logo_icon_bg"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo1"
                android:scaleType="centerCrop"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/parent"
            android:clickable="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:background="@drawable/chooser_icon_bg"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon1"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:clickable="false"
                android:longClickable="false"

                />
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ولي الامر"
                android:textColor="@color/white"
                android:gravity="center_horizontal|top"
                android:clickable="false"
                android:longClickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="10sp"
                 android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/student"
            android:clickable="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@drawable/chooser_icon_bg"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:longClickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="طالب"
                android:textColor="@color/white"
                android:gravity="center_horizontal|top"
                android:clickable="false"
                android:longClickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/employee"
            android:clickable="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="@drawable/chooser_icon_bg"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon3"
                android:padding="4dp"
                android:clickable="false"
                android:longClickable="false"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:clickable="false"
                android:longClickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موظف"
                android:textColor="@color/white"
                android:gravity="center_horizontal|top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visitor"
            android:clickable="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"

            android:background="@drawable/chooser_icon_bg"
            >
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon2"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:clickable="false"
                android:longClickable="false"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="زائر"
                android:textColor="@color/white"
                android:gravity="center_horizontal|top"
                android:clickable="false"
                android:longClickable="false"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:layout_gravity="center"

                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
