<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/toolbar"
        android:id="@+id/appBar"
        ></android.support.design.widget.AppBarLayout>\
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appBar"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="10dp"
        android:visibility="invisible"

        app:cardBackgroundColor="@color/white">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/textShimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:reflectionColor="#FBB429"
            android:gravity="center"
            android:textSize="12sp"
            android:text="سارع بحجز مقعدك للعام الدراسي الجديد. تسجيل طالب جديد"

            />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_below="@+id/cardView"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/home_bg">

        <View
            android:layout_width="280dp"
            android:layout_height="4px"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:rotation="45" />

        <View
            android:layout_width="280dp"
            android:layout_height="4px"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:rotation="135" />
        <FrameLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/logo_icon_bg"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo1"
                android:scaleType="centerCrop"
                />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/chooser_icon_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:longClickable="false"
                android:padding="2dp"
                android:src="@drawable/icon1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center_horizontal|top"
                android:longClickable="false"
                android:text="ولي الامر"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="10sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/student"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/chooser_icon_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:longClickable="false"
                android:padding="5dp"
                android:src="@drawable/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center_horizontal|top"
                android:longClickable="false"
                android:text="طالب"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/employee"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/chooser_icon_bg"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:longClickable="false"
                android:padding="4dp"
                android:src="@drawable/icon3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center_horizontal|top"
                android:longClickable="false"
                android:text="موظف"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"

                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/visitor"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/chooser_icon_bg"
            android:clickable="true"

            android:orientation="vertical">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:longClickable="false"
                android:padding="2dp"
                android:src="@drawable/icon2"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center_horizontal|top"
                android:longClickable="false"
                android:text="زائر"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"

                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
